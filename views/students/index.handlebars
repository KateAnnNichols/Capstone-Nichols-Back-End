{{#each students}}
<div class="card card-body mb-2">
  <h4>{{name}}</h4>
  <p>Teacher: {{teacher}}</p>
  <p>Boards completed: {{boardsCompletedByDate}}</p>
  <a class="btn btn-dark btn-block mb-2" href="/students/edit/{{id}}">Edit</a>
  <form method="post" action="/students/{{id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
  </form>
</div>
{{else}}
<p>No students listed.</p>
{{/each}}